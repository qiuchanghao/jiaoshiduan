<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bj"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:id="@+id/huany"
        >
    <TextView
        android:id="@+id/headto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎登入教科研器系统"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/tophear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传您的教科科研信息："
        android:layout_below="@id/headto"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_gravity="left"
        android:textColor="#ffffff"
        /></RelativeLayout>
    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#30ffffff"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/huany"
        >
        <TextView
            android:id="@+id/text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申报名称："
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            />

        <EditText
            android:id="@+id/cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@+id/text11"
            android:layout_centerInParent="true"
            android:hint="请输入名称"
            android:singleLine="true"
            android:textColor="#6f8587"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#30ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@id/item"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="一级登记类型："
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/cont1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@+id/text12"
            android:layout_centerInParent="true"
            android:hint="请输入类型"
            android:singleLine="true"
            android:textColor="#6f8587"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#30ffffff"
        android:layout_below="@id/item1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="级别："
            android:layout_centerVertical="true"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/cont2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@+id/text13"
            android:layout_centerInParent="true"
            android:hint="请输入级别"
            android:singleLine="true"
            android:textColor="#6f8587"
            android:textSize="20sp" />
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tijiao"
        android:text="提交信息"
        android:layout_below="@id/item2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_background"

        />

    <RelativeLayout
        android:id="@+id/item4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#30ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/home1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="home"
            android:textColor="#000000"
            android:background="@null"
            android:layout_alignParentLeft="true"

            />
        <Button
            android:id="@+id/home3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="two"
            android:textColor="#000000"
            android:background="@null"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/home2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="个人信息"
            android:textColor="#000000"
            android:background="@null"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</RelativeLayout>